{{#each example}}
  <article class="example {{#if isCorrect}}correct{{else}}incorrect{{/if}}">
    <h1>{{#if isCorrect}}ğŸ‘ Correct{{else}}ğŸ‘ Incorrect{{/if}}</h1>
    {{#each property}}
      <section class="example-item">
        <h1>{{{displayName}}}</h1>
        <form action="">
          <div class="form-field">
            {{#if hasControlLabel}}
              {{#if ../isCorrect}}
                <label for="{{@../index}}{{@index}}" class="form-label">Your first name:</label>
              {{else}}
                <p class="form-label">Your first name:</p>
              {{/if}}
            {{/if}}
            <input type="text" id="{{@../index}}{{@index}}" {{#if hasControlPlaceholder}}
              placeholder="Your first name" {{/if}}>
          </div>
        </form>
      </section>
    {{/each}}
  </article>
{{/each}}
